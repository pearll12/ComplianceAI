{
  "policy_name": "AML Monitoring Policy",
  "rules": [
    {
      "rule_id": "R1",
      "description": "High-value transaction",
      "field": "amount",
      "operator": ">",
      "threshold": 1000000
    },
    {
      "rule_id": "R2",
      "description": "Cross-bank transfer",
      "condition": "sender_bank != receiver_bank"
    },
    {
      "rule_id": "R3",
      "description": "High frequency activity",
      "field": "transaction_count",
      "operator": ">",
      "threshold": 5,
      "time_window_minutes": 10
    },
    {
      "rule_id": "R4",
      "description": "High-risk payment method",
      "field": "amount",
      "operator": ">",
      "threshold": 50000,
      "payment_methods": ["cash", "cheque"]
    }
  ]
}